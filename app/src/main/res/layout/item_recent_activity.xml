<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/primary_light"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/image_activity_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cloud"
            app:tint="@color/primary"
            android:contentDescription="Activity icon" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity description goes here"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/text_activity_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today, 10:30 AM"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
